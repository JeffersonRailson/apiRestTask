<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<form class="p-6 col" align="center" action="./api/tasks" method = "POST">
<h2> Adicionar tarefa </h2>
    <div class="form-group">
        <input
            class="form-control p-4"
            name="tarefa"
            placeholder="Insira a tarefa"
        />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
</div>



{%for tarefa in task %}
{%if tarefa.done %}

<div class="container-fluid row">

  <div class="card" style="width: 18rem;">
  <form class="p-6" align="center" action="./api/tasks" method = "POST">
    <div class="card-body">
      <h5 class="card-title text-success">{{tarefa.tarefa}}</h5>
      <h6 class="text-danger"></h6>
      <button type="submit" class="btn btn-primary">Enviar</button>
  </form>
    
  </div>
  
  {%endif%}

{%if tarefa.done ==false%}

  <div class="card" style="width: 18rem;">
  <form class="p-6" align="center" action="./api/tasks" method = "POST">
    <div class="card-body">
      <h5 class="card-title text-danger">{{tarefa.tarefa}}</h5>
      <h6 class="text-danger"></h6>
      <button type="submit" class="btn btn-primary">Enviar</button>
  </form>
  </div>

  {%endif%}


</div>
{%endfor%}




